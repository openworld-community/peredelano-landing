{
  "extends": ["stylelint-config-standard", "stylelint-config-clean-order"],
  "rules": {
    "import-notation": null,
    "unit-allowed-list": [
      "--px",
      "--rpx",
      "--gap",
      "vh",
      "vw",
      "vmin",
      "vmax",
      "fr",
      "deg",
      "s",
      "ms",
      "dpi"
    ],
    "unit-no-unknown": [true, { "ignoreUnits": ["--px", "--rpx", "--gap"] }],
    "function-calc-no-unspaced-operator": null
  }
}
